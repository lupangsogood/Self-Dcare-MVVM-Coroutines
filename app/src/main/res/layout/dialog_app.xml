<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_app"
    android:padding="@dimen/space_16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        style="@style/TextView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#4DB6AC"
        android:textSize="@dimen/text_body_2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/space_24dp"
        android:gravity="center_horizontal"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_body_1"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/space_40dp"
        android:layout_marginTop="@dimen/space_32dp"
        android:layout_marginEnd="@dimen/space_40dp"
        android:background="@drawable/btn_corner_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/true_bold"
        android:textSize="@dimen/space_40dp"
        android:text="@string/ok" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_negative"
        style="@style/Button.Main.Text.Second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_positive"
        android:layout_marginTop="@dimen/space_8dp"
        android:visibility="gone"
        android:text="@string/cancel" />
</RelativeLayout>